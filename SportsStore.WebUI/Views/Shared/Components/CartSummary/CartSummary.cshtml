@model SportsStore.WebUI.ViewModels.CartView
<a class="navbar-brand" href="#">SPORTS STORE</a>
<div >
    <b>Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s)
    @Model.ComputeTotalValue().ToString("c")
    @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Context.Request.Path }, new { @class = "btn btn-secondary navbar-btn" })
</div>
    
