@model SportsStore.WebUI.ViewModels.ShippingDetailsView
@{ 
    ViewBag.Title = "Shipping Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Ship To</h4>
<hr />
<div class="row" style="margin-bottom: 2%">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    Name:
                </label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <h3>Address</h3>
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap")
                {
                    <div class="form-group">
                        <label>
                            @(property.DisplayName?? property.DisplayName)
                        </label>
                        @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                    </div>
                }

            }
            <h3>Options</h3>
            <div class="custom-checkbox">
                <label>
                    @Html.EditorFor(x => x.GiftWrap)
                    Gift wrap this item
                </label>
            </div>
            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Complete order" />
            </div>
        </form>
    </div>
</div>

